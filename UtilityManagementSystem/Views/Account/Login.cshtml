
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Centered container -->
<div class="container d-flex align-items-center justify-content-center" style="min-height: calc(100vh - 56px);">
    <div class="card shadow-sm rounded-lg" style="max-width: 420px; width: 100%;">
        <div class="card-body p-4">
            <!-- Brand / Title -->
            <div class="text-center mb-3">
                <div class="d-inline-flex align-items-center justify-content-center">
                    <!-- Slightly larger neutral multi-utility logo -->
                    <i class="bi bi-grid-3x3-gap text-primary" style="font-size: 2.5rem;"></i>
                </div>
                <h1 class="h5 fw-semibold mt-2 mb-0">UtilityONE</h1>
                <p class="text-body-secondary text-small mb-0">Water · Gas · Electricity</p>
            </div>

            <!-- Validation summary -->
            @if (!ViewData.ModelState.IsValid)
            {
                    <div class="alert alert-danger py-2 text-small" role="alert">
                        Invalid login attempt. Please check your username and password.
                    </div>
            }

            <!-- Login form -->
            <form method="post" action="/Account/Login" novalidate>
                @Html.AntiForgeryToken()

                <!-- Username -->
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input id="username" name="username" type="text" class="form-control"
                           placeholder="Enter your username" autocomplete="username" required />
                </div>

                <!-- Password + visibility toggle -->
                <div class="mb-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <label for="password" class="form-label mb-0">Password</label>
                        <button type="button" class="btn btn-link text-decoration-none text-small p-0" id="togglePassword">
                            <i class="bi bi-eye"></i> Show
                        </button>
                    </div>
                    <input id="password" name="password" type="password" class="form-control"
                           placeholder="Enter your password" autocomplete="current-password" required />
                </div>

                <!-- Remember me -->
                <div class="mb-3 form-check">
                    <input type="checkbox" class="form-check-input" id="rememberMe" name="rememberMe" />
                    <label class="form-check-label" for="rememberMe">Remember me</label>
                </div>

                <!-- Submit -->
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-box-arrow-in-right me-1"></i> Log in
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
        <!-- Password visibility toggle -->
        <script>
            (function () {
                const btn = document.getElementById('togglePassword');
                const input = document.getElementById('password');
                const icon = btn?.querySelector('i');

                btn?.addEventListener('click', function () {
                    const showing = input.type === 'text';
                    input.type = showing ? 'password' : 'text';
                    if (icon) icon.className = showing ? 'bi bi-eye' : 'bi bi-eye-slash';
                    btn.innerHTML = (showing
                        ? '<i class="bi bi-eye"></i> Show'
                        : '<i class="bi bi-eye-slash"></i> Hide');
                });
            })();
        </script>
}
