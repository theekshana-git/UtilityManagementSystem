@model UtilityManagementSystem.ViewModels.BillListViewModel

<div class="container-fluid ums-container ums-content">

    <h2 class="fw-semibold mb-3">Defaulters</h2>

    <div class="card shadow-sm rounded-lg card-hover mb-3" style="border:none">
        <div class="card-body p-3">
            <div class="d-flex flex-wrap gap-3 align-items-end">

                <div class="flex-grow-1" style="min-width:200px;">
                    <label class="text-body-secondary">Customer</label>
                    <input type="text"
                           id="searchInput"
                           class="form-control"
                           placeholder="Search defaulters..." />
                </div>

                <div class="d-flex gap-3">
                    <a asp-action="Index" class="btn btn-primary px-4">
                        Back to Bills
                    </a>
                </div>

            </div>
        </div>
    </div>

    <div class="card shadow-sm rounded-lg card-hover overflow-hidden"
         style="border:1px solid var(--bs-border-color);">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Bill ID</th>
                            <th>Customer</th>
                            <th>Due Date</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody id="defaultersTable">
                        @if (!Model.DefaulterList.Any())
                        {
                            <tr>
                                <td colspan="6" class="text-center text-muted py-4">
                                    No defaulters found.
                                </td>
                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model.DefaulterList)
                            {
                                <tr>
                                    <td class="text-muted fw-semibold">#@item.BillID</td>
                                    <td>@item.CustomerName</td>
                                    <td>@item.DueDate.ToString("dd MMM yyyy")</td>
                                    <td>Rs @item.TotalAmount.ToString("N2")</td>
                                    <td>
                                        <span class="status-badge status-inactive">
                                            Unpaid
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Details"
                                           asp-route-id="@item.BillID"
                                           class="btn btn-primary btn-sm">
                                            View
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>
<script>
    document.getElementById('searchInput').addEventListener('keyup', function () {
        let value = this.value.toLowerCase();
        document.querySelectorAll('#defaultersTable tr').forEach(row => {
            row.style.display = row.textContent.toLowerCase().includes(value) ? '' : 'none';
        });
    });
</script>
