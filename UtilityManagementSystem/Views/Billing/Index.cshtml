@model IEnumerable<UtilityManagementSystem.ViewModels.BillListViewModel>

<div class="container-fluid ums-container ums-content">

    <h2 class="fw-semibold mb-3">Billing History</h2>

    <!-- Filter Card -->
    <div class="card shadow-sm rounded-lg card-hover mb-3" style="border:none">
        <div class="card-body p-3">
            <div class="d-flex flex-wrap gap-3 align-items-end">

                <div class="flex-grow-1" style="min-width:200px;">
                    <label class="text-body-secondary">Customer</label>
                    <input type="text"
                           name="search"
                           class="form-control"
                           placeholder="Search customer..."
                           value="@ViewBag.CurrentSearch" />
                </div>

                <div class="flex-grow-1" style="min-width:200px;">
                    <label class="text-body-secondary">Status</label>
                    <select name="status" class="form-control">
                        <option value="">All</option>
                        <option value="Paid" selected="@(ViewBag.CurrentStatus?.ToString() == "Paid")">Paid</option>
                        <option value="Unpaid" selected="@(ViewBag.CurrentStatus?.ToString() == "Unpaid")">Unpaid</option>
                    </select>
                </div>

                <div class="d-flex gap-3">
                    <button type="submit" formmethod="get" formaction="@Url.Action("Index")"
                            class="btn btn-primary px-4">
                        Filter
                    </button>

                    <a asp-action="Create" class="btn btn-success px-4">
                        Generate Bill
                    </a>

                    <a asp-action="Defaulters" class="btn btn-danger px-4">
                        View Defaulters
                    </a>
                </div>

            </div>
        </div>
    </div>

    <!-- Table Card -->
    <div class="card shadow-sm rounded-lg card-hover overflow-hidden mb-3"
         style="border:1px solid var(--bs-border-color);">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-striped align-middle mb-0">
                    <thead>
                        <tr>
                            <th>Customer</th>
                            <th>Amount</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th class="text-center">Action</th>
                        </tr>
                    </thead>
                    <tbody id="billingTable">
                        @{
                            var index = 0;
                        }

                        @foreach (var bill in Model)
                        {
                            <tr data-index="@index">
                                <td>@(bill.CustomerName ?? "N/A")</td>
                                <td>Rs. @bill.TotalAmount.ToString("N2")</td>
                                <td>@bill.BillDate.ToString("dd MMM yyyy")</td>
                                <td>
                                    <span class="status-badge @(bill.Status == "Paid" ? "status-active" : "status-inactive")">
                                        @bill.Status
                                    </span>
                                </td>
                                <td class="text-center">
                                    <a asp-action="Details"
                                       asp-route-id="@bill.BillID"
                                       class="btn btn-primary btn-sm">
                                        View
                                    </a>
                                </td>
                            </tr>
                            index++;
                        }
                    </tbody>
                </table>
            </div>

            @if (Model.Count() > 5)
            {
                <div class="py-2 text-center">
                    <a href="javascript:void(0);" class="btn btn-link" id="showMoreBtn">
                        Show More
                    </a>
                </div>
            }
        </div>
    </div>

</div>

@section styles {
    <style>
        .card-hover {
            transition: transform .2s ease, box-shadow .2s ease, border-color .2s ease;
        }

            .card-hover:hover {
                transform: translateY(-2px);
                box-shadow: 0 0 0 2px rgba(13,110,253,0.25), 0 8px 20px rgba(0,0,0,0.10);
            }

        .status-badge {
            font-weight: 600;
            padding: 2px 6px;
            border-radius: 4px;
            font-size: 14px;
        }

        .status-active {
            color: #22c55e;
            background-color: rgba(34,197,94,0.2);
        }

        .status-inactive {
            color: #ef4444;
            background-color: rgba(239,68,68,0.2);
        }
    </style>
}

@section Scripts {
    <script>
        const rows = document.querySelectorAll("#billingTable tr");
        const showMoreBtn = document.getElementById("showMoreBtn");

        const LIMIT = 5;
        let expanded = sessionStorage.getItem("billingExpanded") === "true";

        function applyLimit() {
            rows.forEach((row, i) => {
                row.style.display = expanded || i < LIMIT ? "" : "none";
            });
        }

        if (rows.length > LIMIT) {
            applyLimit();
        }

        if (showMoreBtn) {
            showMoreBtn.addEventListener("click", () => {
                expanded = !expanded;
                sessionStorage.setItem("billingExpanded", expanded);
                applyLimit();
                showMoreBtn.innerText = expanded ? "Show Less" : "Show More";
            });
        }
    </script>
}
