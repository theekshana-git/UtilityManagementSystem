@model UtilityManagementSystem.ViewModels.PaymentHistoryViewModel

<div class="container-fluid ums-container ums-content">
    <h2 class="fw-semibold mb-4">Payment Receipt</h2>

    <div class="card shadow-sm rounded-lg p-4" style="max-width: 600px; margin: auto; border:1px solid var(--bs-border-color);">

        <!-- Header -->
        <div class="text-center mb-4">
            <h4 class="fw-bold">UtilityONE</h4>
            <span class="text-body-secondary">Official Payment Receipt</span>
        </div>

        <!-- Divider -->
        <hr style="border-top: 1px dashed #ccc;" />

        <!-- Customer & Payment Info -->
        <div class="mb-3">
            <div class="d-flex justify-content-between">
                <span class="fw-semibold">Customer:</span>
                <span>@Model.Customer</span>
            </div>
            <div class="d-flex justify-content-between">
                <span class="fw-semibold">Bill ID:</span>
                <span>@Model.BillId</span>
            </div>
            <div class="d-flex justify-content-between">
                <span class="fw-semibold">Payment Method:</span>
                <span>@Model.PaymentMethod</span>
            </div>
            <div class="d-flex justify-content-between">
                <span class="fw-semibold">Date:</span>
                <span>@Model.PaymentDate.ToString("dd MMM yyyy")</span>
            </div>
        </div>

        <!-- Amount -->
        <div class="mb-3 p-3 rounded" style="background-color: rgba(13,110,253,0.05); text-align:center;">
            <h5 class="fw-bold mb-0">Amount Paid</h5>
            <h2 class="fw-bold text-primary mt-1">Rs. @Model.AmountPaid.ToString("N2")</h2>
        </div>

        <!-- Footer -->
        <div class="d-flex justify-content-between mt-4">
            <button class="btn btn-primary px-4" onclick="window.print()">Print</button>
            <a asp-action="Index" class="btn btn-link">Back</a>
        </div>
    </div>
</div>

@section styles {
    <style>
        /* Card hover matches index page theme */
        .card-hover {
            transition: transform .2s ease, box-shadow .2s ease, border-color .2s ease;
        }

            .card-hover:hover {
                transform: translateY(-2px);
                box-shadow: 0 0 0 2px rgba(13,110,253,0.15), 0 8px 20px rgba(0,0,0,0.08);
            }

        h2, h4, h5 {
            font-family: 'Segoe UI', sans-serif;
        }

        .fw-semibold {
            font-weight: 600;
        }

        hr {
            margin: 1rem 0;
        }

        @@media print {
            body *

        {
            visibility: hidden;
        }

        .card, .card * {
            visibility: visible;
        }

        .card {
            position: absolute;
            left: 0;
            top: 0;
            width: 100%;
        }

        button, a {
            display: none;
        }

        }
    </style>
}
