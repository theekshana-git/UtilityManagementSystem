@model UtilityManagementSystem.ViewModels.ReportViewModel

<div class="container py-5">
    <div class="text-center mb-5">
        <h2 class="display-5 fw-bold text-primary">Reports Dashboard</h2>
        <p class="text-muted">System-wide analytics and financial summaries</p>
    </div>

    <div class="row g-4 justify-content-center">
        <div class="col-md-4">
            <div class="card h-100 shadow border-0 transition-hover">
                <div class="card-header bg-success text-white py-3">
                    <h5 class="mb-0 fw-semibold"><i class="bi bi-cash-stack me-2"></i>Revenue Report</h5>
                </div>
                <div class="card-body d-flex flex-column justify-content-between">
                    <p class="text-muted">Analyze total earnings by month and year.</p>
                    <a asp-controller="Reports" asp-action="MonthlyRevenue" class="btn btn-success w-100 py-2 shadow-sm">Open Report</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow border-0 transition-hover">
                <div class="card-header bg-danger text-white py-3">
                    <h5 class="mb-0 fw-semibold"><i class="bi bi-exclamation-triangle me-2"></i>Defaulters List</h5>
                </div>
                <div class="card-body d-flex flex-column justify-content-between">
                    <p class="text-muted">Track customers with outstanding unpaid bills.</p>
                    <a asp-controller="Reports" asp-action="Defaulters" class="btn btn-danger w-100 py-2 shadow-sm">View List</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card h-100 shadow border-0 transition-hover">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0 fw-semibold"><i class="bi bi-speedometer2 me-2"></i>Usage Summary</h5>
                </div>
                <div class="card-body d-flex flex-column justify-content-between">
                    <p class="text-muted">Check individual consumption and history.</p>
                    <a asp-controller="Reports" asp-action="CustomerUsage" class="btn btn-primary w-100 py-2 shadow-sm">Check Usage</a>
                </div>
            </div>
        </div>
    </div>
</div>